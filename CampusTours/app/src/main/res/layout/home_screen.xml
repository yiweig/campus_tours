<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#272425"
    tools:context=".HomeScreenActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="197dp"
        android:layout_marginRight="197dp"
        android:layout_marginTop="48dp" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/WelcomeContd"
        android:layout_centerHorizontal="true"
        android:text="Welcome, "
        android:textColor="#0a5290"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/WelcomeContd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:text="start your tour:"
        android:textColor="#0a5290"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/CampusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WelcomeContd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:text="Choose a Campus:"
        android:textColor="#7d7d7d"
        android:textSize="30sp" />

    <Button
        android:id="@+id/StartButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:background="#0a5290"
        android:text="Start Tour"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/school_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/CampusText"
        android:layout_alignLeft="@+id/CampusText"
        android:layout_alignRight="@+id/CampusText"
        android:layout_alignStart="@+id/CampusText"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/abc_spinner_mtrl_am_alpha" />


</RelativeLayout>
                                                                                                                                